{
  "compilerOptions": {
    "strict": true,
    "types": ["./node_modules/chrome-types/_all.d.ts", "jasmine"],
    "outDir": "./build/",
    "lib": ["ESNext", "DOM"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "target": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true
  },
  "include": ["./scripts/**/*.ts"],
  "exclude": ["./scripts/**/*.test.ts"]
}
